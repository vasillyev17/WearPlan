@model IEnumerable<WP.Models.Selection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDiscount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDiscount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idSelection">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idSelection">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idSelection">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
