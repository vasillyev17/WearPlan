@page
@model Attempt3.Pages.SelectionPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Selection[0].idWardrobe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection[0].idProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection[0].idDiscount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Selection) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idWardrobe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDiscount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.idSelection">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.idSelection">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.idSelection">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
