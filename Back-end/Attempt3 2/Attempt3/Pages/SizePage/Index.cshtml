@page
@model Attempt3.Pages.SizePage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Size[0].size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Size) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.idSize">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.idSize">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.idSize">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
