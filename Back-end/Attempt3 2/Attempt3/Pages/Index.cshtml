@page
@model Attempt3.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<div class="container">
    <div class="row row-cols-2 row-cols-md-2">
        @for (var item = 0; item < Model.Product.Count; item++)
        {
            <div class="col-4 mb-4">
                <div class="card">
                    <img src=@Html.DisplayFor(modelItem => Model.Product[item].image) class="card-img-top" alt="" height="300">
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(modelItem => Model.Product[item].model)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => Model.Product[item].description)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>