@model Attempt3.Pages.CustomerPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].idWardrobe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idWardrobe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.discount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.idCustomer">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.idCustomer">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.idCustomer">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
