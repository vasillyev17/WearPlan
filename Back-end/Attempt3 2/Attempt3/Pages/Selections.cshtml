@page
@model Attempt3.Pages.SelectionsModel
@{
    ViewData["Title"] = "Selections";
}

<h1>My Selections</h1>

<div class="container">
    <div class="row row-cols-2 row-cols-md-2">

        @foreach (var item in Model.q)
        {
            @foreach (var prod in Model.Product)
            {
                if (prod.idProduct == item)
                {
                    <div class="col-4 mb-4">
                        <div class="card">
                            <img src=@Html.DisplayFor(modelItem => prod.image) class="card-img-top" alt="" height="300">
                            <div class="card-body">
                                <h5 class="card-title"> @Html.DisplayFor(modelItem => prod.model)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => prod.description)</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>

